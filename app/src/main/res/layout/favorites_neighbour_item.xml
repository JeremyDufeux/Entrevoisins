<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/favorite_item_list_container">


    <ImageView
        android:id="@+id/favorite_item_list_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/detail_picture_sample"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/favorite_item_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/detail_name_sample"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/favorite_item_list_avatar"
        app:layout_constraintStart_toEndOf="@+id/favorite_item_list_avatar"
        app:layout_constraintTop_toTopOf="@+id/favorite_item_list_avatar" />

    <ImageButton
        android:id="@+id/favorite_item_list_remove_favorite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/favorite_item_list_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/favorite_item_list_name"
        app:srcCompat="@drawable/ic_star_white_24dp"
        android:tint="@color/favorite_yellow"/>

</android.support.constraint.ConstraintLayout>